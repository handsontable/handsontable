/* Larger bottom gap of H1, H2, H3 */
h1 {
    margin-bottom: 3rem!important;
}

h2 {
    margin-bottom: 2rem!important;
    font-size: 1.55rem;
}

h3 {
    margin-bottom: 1rem!important;
}

.page {
    ul, ol {
        padding-left: 2.2em;
    }
    ul {
        list-style-type: square;
    }
}

a {
    color: #3d84ff;
}

.sidebar {
    background-color: #fbfbfb;

    a.sidebar-link.active, a.sidebar-link:hover {
        color: #3d84ff;
    }

    .sidebar-sub-headers a.sidebar-link {
        color: #4d6379
    }
}

table {
    width: 100%;
    display: table;

    tr {
        border-top: none;
    }

    th, td {
        border: none;
        border-bottom: 1px solid #dfe2e5;
        line-height: 1.7;
        text-align: left;
    }
}

// floating sidebar should be inline on mobile, and float on wider screens
@media (min-width: 1200px) {
    .page {
        .page-edit
        .page-nav
        .theme-default-content {
            margin: 0 300px 0 0;
        }

        .toc-container-header {
            font-weight bold
            padding: 1em 1.2rem;
        }

        .table-of-contents {
            font-size: 0.8em;
            position: fixed;
            right: 0;
            top: 100px;
            width: 250px;
            max-height: 400px;
            overflow-y: auto;
            overflow-x: hidden;
            border-left: 1px solid #eaecef;

            ul {
                padding: 0;
                margin: 0;
                list-style-type: none;
            }

            a {
                font-weight: 400;
                line-height: 1.4;
                padding: 0.35rem 1rem;
                color: #2c3e50;
                display: block;
            }

            a:hover {
                color: #3d84ff;
                text-decoration: none;
            }
        }
    }
}

div.js-fiddle-link {
    position: relative;
    top: 10px;
    z-index: 10;
    float: right;
    right: 34px;

    button {
        background: #40404f;
        border: 0;
        border-radius: 5px;
        color: #7f8085;
    }
    button:hover{
        background: #454554;
    }
}