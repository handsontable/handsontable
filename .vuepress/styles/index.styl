body div {
    user-select: initial;
}

.hot {
    position: relative;
    z-index: 0;
}

.iframe-container {
    overflow: hidden;
    // aspect ration of the video (for 16:9 it is 9/16= 0.5625)
    padding-top: 56.25%;
    position: relative;
}

.iframe-container iframe {
    border: 0;
    height: 100%;
    left: 0;
    position: absolute;
    top: 0;
    width: 100%;
}

