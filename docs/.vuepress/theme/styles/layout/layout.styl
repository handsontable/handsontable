html {
	font-size $font-size
	line-height: $line-height
	background: $bgColor
	color: $textColor

	&.disable-transition {
		*, :after, :before {
			transition: none !important
		}
	}
}

body {
	font-family: $font
	background: $bgColor
	-webkit-font-smoothing: antialiased
}

.Inter { font-family: $font }
h1,h2,h3,h4,h5,h6 { font-family: $font-aeonik }
.whitespace-nowrap { white-space nowrap}

a {
	color: $accentColor
	font-weight: 400
}

#app,
.layout-container,
.theme-container {
	min-height:100vh
	min-height:100dvh
}
.layout-container {
	scrollbar-color: $borderColor transparent;
	scrollbar-width:thin

	pre { scrollbar-color: $lightBorderColor transparent;}
}

::selection {
  // background-color: $accentColor
  // color: $bgColor
}

*:not(.handsontable):not(.handsontable *) {
  outline: $accentColor solid 0;
  outline-offset: -2px;
}

*:not(.handsontable):not(.handsontable *):focus-visible {
  outline: $accentColor solid 1px;
}

#nprogress .bar {
	background: $accentColor
}
.hidden {
	display:none
}

.visually-hidden {
	border: 0
	clip: rect(0, 0, 0, 0)
	height: 1px
	width: 1px
	margin: -1px
	padding: 0
	overflow: hidden
	white-space: nowrap
	position: absolute !important
}

@media (min-width: $xxxLarge) {
	#app {
		width:$xxxLarge
		margin: 0 auto

		.navbar .navbar-wrapper {
			width:$xxxLarge
			margin: 0 auto
		}
		.sidebar {
			left: 50%
			transform: translateX(16 + $xxxLarge/-2)
		}
		.table-of-contents {
			right:50%
			transform: translateX(0 + $xxxLarge/2)
		}
	}
}

@media (min-width: $xLarge) {
	#app {
	 .footer {
			max-width: 720px

			.footer-links {
				flex-wrap: wrap

				.edit-link {
					order: -1
					margin-left: 0
				}
			}
		}
	}
}

.theme-container {
	overflow: hidden
}

.no-pointer {
	pointer-events: none
}

.img-light {
	display: block
}

.img-dark {
	display: none
}

.tag-updated, .tag-new, .tag-deprecated  { 
		font-size: 11px
		line-height: $line-height-xxs
		display: block;
		border-radius: $radius-s
		padding: 1px 5px;
		background-color: #238349
		color: $bgColor
		margin: -1px 0;
		width: auto !important
}
.tag-new { 
		background-color: $accentColor
}
.tag-deprecated { 
		background-color: $depricatedColor
}