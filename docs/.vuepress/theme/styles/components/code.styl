.page {
    .theme-default-content code { 
        background: $bgCode 
        font-size: $font-size-xs
        line-height: $line-height-xs
        font-weight: 400
        vertical-align: middle
        padding: 2px 6px
        border-radius: $radius
        color: $textColor 
        margin: 1px 1px 1px 0
    }

    .theme-default-content {
        a > code,
        li > code,
        p > code {
            background: $onsurfaceColor 
            box-shadow: 0 0 0 1px $borderColor
        }

        a code {
            color: $linkColor
            transition: $t all ease-in-out
            

            @media (hover: hover) {
                &:hover { 
                    text-decoration:none
                    color: $textColor
                }
            }
        }

        .language-bash:before { 
            display: none
        }
        div[class*="language-"] { 
            background: $editorColor 
        }
        
        .source-code-link {
            padding: 2px 8px
            color: $text2Color
            //background: $sideColor
            border: 1px solid $borderColor
            border-radius: $radius
            top: -28px
            position: relative
            float: right
            font-size: $font-size-xs
            
            i { 
                display: inline-block
                vertical-align: text-top;
            }

            + p { 
                //margin-top: -28px 
            }

            @media (hover: hover) {
                &:hover { 
                    border-color: $linkColor
                }
            }
        }

        pre { 
            margin-top: 16px
            background: $editorColor 
            padding: 16px 24px
            margin: 16px -16px 0
            border-radius: $radius
            font-size: $font-size-s
            line-height: $line-height-s
        }
    }

    div[class*="language-"]::before { 
        display: none

        font-size: $font-size-xxs
        line-height: $line-height-xxs
        color: $text2Color
        top: 8px;
        right: -8px;
        padding: 8px;
        border-radius: $radius;
        background: $bgColor
    }
    .tabs-component {
        div[class*="language-"]::before {
            right: 8px
        }
    }

    .theme-default-content div[class*="language-"] {
        background: $editorColor 
        border-radius: $radius
        margin-bottom: 24px
        padding: 0
    }

    .theme-code-group { 
        margin: 0 -16px 

        .theme-code-block {
            margin-top: -38px
        }

        pre { 
            margin: 16px 0
            border-radius: 0 0 $radius $radius
            padding-bottom: 24px
        }
    }

    .theme-code-group__nav { 
        background: $editorHeadColor 
        margin: 16px 0
        padding: 8px 16px 16px
        border-radius: $radius
        margin-bottom: -16px

        button {
            font-size: $font-size-xs
            line-height: $line-height-xs
            font-weight: 400
            padding:8px 8px 8px
            color: $text2Color

            &.theme-code-group__nav-tab-active {
                color: $textColor
                border-color: $linkColor
            }
        }
    }

    @media (max-width: 419px) {
        div[class*="language-"] {
            margin:0
        }
    }
}

.theme-default-content pre code, 
.theme-default-content pre[class*="language-"] code {
    color: $textColor
}

.copycode, .report { 
    position: absolute 
    top: 8px
    right: -8px
    transition: all $t ease-in-out !important
    opacity 0
    padding: 8px !important
    z-index: 1
    color: $textColor

    i {
        opacity: .64
        transition: all $t ease-in-out

        + i {
            position absolute
            opacity 0
            inset 8px
        }
    }

    &:after {
        content: attr(aria-label)
        position absolute
        white-space: pre;
        bottom: 38px;
        left: 50%
        transform: translateX(-50%)
        padding:4px 8px
        border-radius: $radius
        background: $sideColor
        border: 1px solid $lightBorderColor
        opacity: 0
        transition: all $t ease-in-out
        font-size: $font-size-xs
        line-height: $line-height-xs
        pointer-events: none
    }

    &.check {
        i {
            opacity 0

            + i {
                opacity: .64
            }
        }
    }

    @media (hover: hover) {
        &:hover:after  {
            opacity 1
        }
    }
}
.report {
    right: 32px
    padding: 8px 16px
    padding: 8px 16px
    border:none
    cursor: pointer
    border-radius: $radius
    background: $sideColor 
    border: 1px solid $lightBorderColor
    color: $textColor

    @media (hover: hover) {
        &:hover { 
            background: $borderColor 
            border: 1px solid $accentColor
        }
    }
}

div[class*="language-"] pre, 
div[class*="language-"] pre[class*="language-"] {
    background: $editorColor
    position: relative
    
    
}

div[class*="language-"] {
    @media (hover: hover) {
        &:hover {
            .copycode, .report { 
                opacity 1
            }
        }
    }
}

output.console {
    margin: 16px 0 
    padding: 12px 16px
    border-radius: $radius
    max-height: 250px;
    font-size: $font-size-xs
    line-height: $line-height-xs
    border: 1px solid $borderColor
    background: $sideColor
    white-space: pre-line;
    display: block

    &:last-child {
        margin-bottom: 0
    }
}

#example1_events {
    height: 200px;
    padding: 8px;
    margin: 16px 0 16px;
    overflow-y: scroll;
    font-size: $font-size-xs
    line-height: $line-height-xs
    box-sizing: border-box;
    border-radius: $radius
    border:1px solid $borderColor

    div {
        padding: 8px 8px
        border-radius: $radius

        &:nth-child(odd) {
            background-color: $borderColor
        }
    }
}

