/*
  A stylesheet customizing Handsontable style
*/

.handsontable {
  font-size: 13px;
  color #222222;

  * { 
    outline: blue solid 0 !important
  }
  *:focus-visible {
    outline: blue solid 0 !important
  }

  img {
    border-radius: 0 !important
  }
  .handsontable a {
      color: #104acc !important
  }
  .ht_master .wtHider { 
    background: #ffffff;
  }
}

.htCommentsContainer .htCommentTextArea {
  color #222222;
}
table.htCore {
    display: table;
}

// reset common TD, TH styles from the style.styl file (default styles from VuePress)
[dir=rtl].handsontable {
  table {
    th {
      text-align center
    }
    td {
      text-align start
    }
  }
}