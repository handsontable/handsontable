/*
  A stylesheet customizing Handsontable style
*/

.handsontable {
  font-size: 13px;
  color #222222;

  *:not(a):not(button):not(select) {
    outline: blue solid 0 !important
  }

  *:not(a):not(button):not(select):focus-visible {
    outline: blue solid 0 !important
  }

  img {
    border-radius: 0 !important
  }

  .handsontable tr {
    background: none;
  }

  .htFocusCatcher {
    border: 0 !important;
  }
}

table.htCore {
    display: table;
}

// reset common TD, TH styles from the style.styl file (default styles from VuePress)
[dir=rtl].handsontable {
  table {
    th {
      text-align center
    }
    td {
      text-align start
    }
  }
}
